<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="studio.carwash.com.carwash.ConsumerOrderStartActivity">

    <Button
        android:id="@+id/btn_addNewCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="Add New Vehicle"
        />

    <TextView
        android:id="@+id/textView_booknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book your carwasher! please select a car from below list or add new car."
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView_noCarsFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Vehicle Found."
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewForConsumerCarList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
