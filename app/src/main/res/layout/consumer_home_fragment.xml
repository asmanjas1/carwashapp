<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
    android:id="@+id/btn_addNewCar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@color/colorPrimary"
    android:textColor="@color/colorWhite"
    android:text="Add New Car"
    />

    <Button
        android:id="@+id/btn_booknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:text="Book Your Carwasher"
        />

    <TextView
        android:id="@+id/textView_booknow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please select a car from below list or Add a new car."
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:textSize="18sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewForConsumerCarList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>